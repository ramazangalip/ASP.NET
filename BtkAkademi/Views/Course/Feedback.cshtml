@model Candidate
<div>
    <h3 class="display-4">Tebrikler @Model.FullName</h3>
    <p class="lead"> Başvurunuz kabul  <mark>edildi.</mark></p>
    <p class="lead"> Çok Teşekkürler Başvurunuz için.</p>
    <hr/>
    <blockquote class="blockquote">
        Kayıt oldunuz @Model.SelectedCourse kursuna.
    </blockquote>
    <p class="text-muted">Şu tarihte başvuru yaptınız : @Model.ApplyAt</p>

    <div class="btn-group">
        <a class="btn btn-outline-success" asp-action="Index">Başvurular</a>
        <a class="btn btn-success" asp-action="Index" asp-controller="Home">Home</a>
    </div>
</div>