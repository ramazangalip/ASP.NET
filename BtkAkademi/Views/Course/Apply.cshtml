@model Candidate

<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email">Email : </label>
        <input asp-for="Email" name="Email" class="form-control"/>
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName">FirstName : </label>
        <input  asp-for="FirstName" name="FirstName" class="form-control"/>
    </div>
    <div class="form-group my-2">
        <label  asp-for="LastName">LastName : </label>
        <input asp-for="LastName" name="LastName" class="form-control"/>
    </div>
    <div class="form-group my-2">
        <label asp-for="Age">Age : </label>
        <select asp-for="Age" class="form-control" name="Age">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
        </select>
    </div>

    <fieldset>
        <legend>Bir kurs Se√ßin.</legend>
        <p>
            <input checked id="mvc" type="radio" name="SelectedCourse" asp-for="SelectedCourse" value="ASP.NET CORE MVC"/>
            <label for="">ASP.NET CORE MVC</label>
        </p>
        <p>
            <input id="api" type="radio" name="SelectedCourse"asp-for="SelectedCourse" value="ASP.NET CORE API"/>
            <label for="">ASP.NET CORE API</label>
        </p>
        <p>
            <input id="blazor" type="radio" name="SelectedCourse" asp-for="SelectedCourse"value="Blazor"/>
            <label for="">Blazor</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a href="/" class="btn btn-warning">Home</a>
    </div>
</form>